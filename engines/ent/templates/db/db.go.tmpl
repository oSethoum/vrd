package db

import (
	"context"
	"{{.Config.Ent.Package}}/ent"

	"entgo.io/ent/dialect/sql/schema"
	_ "github.com/mattn/go-sqlite3"
)

var Client *ent.Client

func Init() {
	client, err := ent.Open("sqlite3", "file:db.sqlite?_fk=1")

	if err != nil {
		panic(err)
	}

	err = client.Schema.Create(context.Background(), schema.WithDropColumn(true), schema.WithDropIndex(true))

	if err != nil {
		panic(err)
	}

	Client = client
}
